<!-- tab content -->
<div class="tab-content page-content">
    <!-- addToWallet --->
    <div class="tab-pane active text-style" id="addToWalletTab">
      <div class="alert alert-primary" role="alert">
         <h4>Add User To Wallet</h4>
      </div>
		<form>
		  <div class="form-group">
		    <input type="text" class="form-control" id="user" placeholder="Enter User">
		  </div>
		  <button id="addUser" type="submit" class="btn btn-success">Add User</button>
		</form>
    <hr>
    </div>
    <!-- makeEquipment --->
    <div class="tab-pane text-style" id="wholesalerDistributeTab">
      <div class="alert alert-primary" role="alert">
         <h4>Wholesaler Distribute</h4>
      </div>
      	<form>
      	  <div class="form-group row">
      	    <label for="equipmentNumber" class="col-sm-2 col-form-label">Equipment Number</label>
      	    <div class="col-sm-10">
      	      <input type="text" class="form-control" id="equipmentNumber" value="2000.002">
      	    </div>
      	  </div>
      	  <div class="form-group row">
      	    <label for="ownerName" class="col-sm-2 col-form-label">Owner Name</label>
      	    <div class="col-sm-10">
      	      <input type="text" class="form-control" id="ownerName" value="GlobalWholesalerInc">
      	    </div>
      	  </div>
      	  <button type="submit" id="wholesalerDistribute" class="btn btn-success mb-2">Submit</button>
      	</form>
       <hr>
    </div>
    <!-- query --->
  <div class="tab-pane text-style" id="queryTab">
       <div class="alert alert-primary" role="alert">
          <h4>Query supply chain data</h4>
       </div>
       <form>
    	   <div class="form-group">
    		<input type="text" class="form-control" id="queryKey" placeholder="Enter Key">
    	   </div>
    	   <button id="query" type="submit" class="btn btn-success">Query</button>
	    </form>
       <hr>
       <div id="queryResult">
           <h4 class="display-4 text-center">Query Result</h4>
           <table class="table table-striped table-sm">
              <tbody>
                <tr>
                  <th scope="row">QueryKey</th>
                  <td><span id="queryKeyRequest"></span></td>
                </tr>
                <tr>
                  <th scope="row">Manufacturer</th>
                  <td><span id="manufacturerOutPut"></span></td>
                </tr>
                <tr>
                  <th scope="row">Equipment Number</th>
                  <td><span id="equipmentNumberOutPut"></span></td>
                </tr>
                <tr>
                  <th scope="row">Equipment Name</th>
                  <td><span id="equipmentNameOutPut"></span></td>
                </tr>
                <tr>
                  <th scope="row">Owner</th>
                  <td><span id="ownerNameOutPut"></span></td>
                </tr>
                <tr>
                  <th scope="row">Previous Owner Type</th>
                  <td><span id="previousOwnerType"></span></td>
                </tr>
                <tr>
                  <th scope="row">Current Owner Type</th>
                  <td><span id="currentOwnerType"></span></td>
                </tr>
                <tr>
                  <th scope="row">Eqipment Created Date</th>
                  <td><span id="createDateTime"></span></td>
                </tr>
                <tr>
                  <th scope="row">Last Updated Date/th>
                  <td><span id="lastUpdated"></span></td>
                </tr>
              </tbody>
            </table>
       </div>
       <div id="queryResultEmpty">
           <h3 class="display-4 text-center">Not record found</h3>
       </div>
    </div>
    <!-- query history --->
  <div class="tab-pane text-style" id="queryHistoryTab">
        <div class="alert alert-primary" role="alert">
           <h4>Query supply chain history data</h4>
        </div>
       <form>
         <div class="form-group">
        <input type="text" class="form-control" id="queryHistoryKey" placeholder="Enter Key">
         </div>
         <button id="queryHistory" type="submit" class="btn btn-success">Query History</button>
      </form>
       <hr>
       <div id="queryHistoryResult">
           <h4 class="display-5 text-center">Query History Result</h4>
           <table id="historyTable" class="table table-striped table-sm">
             <thead>
               <tr>
                 <th scope="col">QueryKey</th>
                 <th scope="col">Manufacturer</th>
                 <th scope="col">Equipment Number</th>
                 <th scope="col">Equipment Name</th>
                 <th scope="col">Owner</th>
                 <th scope="col">Previous Owner Type</th>
                 <th scope="col">Current Owner Type</th>
                 <th scope="col">Eqipment Created Date</th>
                 <th scope="col">Last Updated Date</th>
               </tr>
             </thead>
             <tbody id="historyTableTboday">

             </tbody>

           </table>
       </div>
       <div id="queryHistoryResultEmpty">
           <h3 class="display-4 text-center">Not record found</h3>
       </div>
    </div>
</div>
